<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2
                        http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>1</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <files>
        <file>
            <fileMode>0755</fileMode>
            <source>src/main/exe/tidsserie.l4j.ini</source>
            <outputDirectory>.</outputDirectory>
            <destName>${project.artifactId}.l4j.ini</destName>
        </file>
        <file>
            <fileMode>0444</fileMode>
            <source>src/main/exe/version.txt</source>
            <outputDirectory>.</outputDirectory>
            <filtered>true</filtered>
            <destName>version.txt</destName>
        </file>
    </files>
    <fileSets>
        <fileSet>
            <fileMode>0755</fileMode>
            <directory>target</directory>
            <outputDirectory>.</outputDirectory>
            <includes>
                <include>${project.artifactId}.exe</include>
            </includes>
        </fileSet>
        <fileSet>
            <fileMode>0444</fileMode>
            <directory>${project.build.outputDirectory}</directory>
            <outputDirectory>.</outputDirectory>
            <includes>
                <include>git.properties</include>
            </includes>
        </fileSet>
    </fileSets>
    <dependencySets>
        <dependencySet>
            <outputDirectory>jre</outputDirectory>
            <unpack>true</unpack>
            <scope>provided</scope>
            <fileMode>0755</fileMode>
            <directoryMode>0755</directoryMode>
            <includes>
                <include>com.oracle:jre:zip:zip:1.8.0_51</include>
            </includes>
        </dependencySet>
    </dependencySets>
</assembly>
