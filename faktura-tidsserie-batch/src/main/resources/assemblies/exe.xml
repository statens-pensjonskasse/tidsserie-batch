<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2
                        http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>1</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <files>
        <file>
            <fileMode>0755</fileMode>
            <source>src/main/exe/tidsserie.l4j.ini</source>
            <outputDirectory>${project.artifactId}</outputDirectory>
            <destName>${project.artifactId}-${project.version}.l4j.ini</destName>
        </file>
    </files>
    <fileSets>
        <fileSet>
            <fileMode>0755</fileMode>
            <directory>target</directory>
            <outputDirectory>${project.artifactId}</outputDirectory>
            <includes>
                <include>${project.artifactId}-${project.version}.exe</include>
            </includes>
        </fileSet>
        <fileSet>
            <fileMode>0755</fileMode>
            <directory>${jre.directory}</directory>
            <outputDirectory>${project.artifactId}/jre</outputDirectory>
        </fileSet>
    </fileSets>
</assembly>